<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="arey.es.tema3_hoja3.Ejercicio1">

    <TextView
        android:text="@string/textViewX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/textViewX"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewX"
        android:layout_toEndOf="@+id/textViewX"
        android:id="@+id/resultX" />

    <TextView
        android:text="@string/textViewY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewX"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textViewY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewY"
        android:layout_toEndOf="@+id/resultX"
        android:id="@+id/resultY" />

    <TextView
        android:text="@string/textViewZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewY"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textViewZ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewZ"
        android:layout_toEndOf="@+id/textViewY"
        android:id="@+id/resultZ" />
</RelativeLayout>
